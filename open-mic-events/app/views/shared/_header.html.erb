<section class="hero is-link is-small">
  <!-- Hero head: will stick at the top -->
  <div class="hero-head">
    <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <%= link_to root_path, class: 'navbar-item' do %>
            <span class='has-text-weight-bold is-size-4 m-auto'>Open Mic Events</span>
          <% end %>
        </div>
        <div class="navbar">
          <div class="navbar-end">
            <span class="navbar-item">
                <%= link_to "Create New Entry", new_entry_path, class: "button is-success"  %>
            </span>
          </div>
        </div>
      </div>
    </nav>
  </div>

  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
    <div class="container has-text-centered">
      <p class="title">
        <% if content_for(:title) %>
          <%= yield :title %>
        <% else %>
          Open Mic Events
        <% end %>
      </p>
    </div>
  </div>
</section>